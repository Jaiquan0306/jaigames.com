  text-align: center;
  background: #111;
  color: white;
}

header {
  background: #333;
  padding: 20px;
}

h1 {
  margin: 0;
  color: #00ff88;
}

.games {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 30px;
}

.games img {
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  transition: transform 0.2s ease;
}

.games img:hover {
  transform: scale(1.1);
}

footer {
  margin-top: 50px;
  padding: 10px;
  background: #222;
}
